{
  "name": "module-watcher",
  "version": "0.1.6",
  "description": "支持增量构建的任务管理器",
  "main": "src/index.js",
  "bin": "bin/module-watcher",
  "scripts": {
    "example": "module-watcher --config example/module-watcher.json",
    "parallel-test": "node test/file/parallel/index.js",
    "tasks-test": "module-watcher --config test/file/tasks/module-watcher.json",
    "test": "mocha --recursive --bail 'test/**/*test.js'",
    "posttest": "npm run example && npm run tasks-test",
    "clear": "rm -rf example/dist & rm -rf test/file/parallel/dist & rm -rf test/file/tasks/dist",
    "new-test": "npm run clear && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aui/module-watcher.git"
  },
  "keywords": [
    "webpack",
    "gulp",
    "grunt",
    "ci",
    "git",
    "svn",
    "task",
    "build"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/aui/module-watcher/issues"
  },
  "homepage": "https://github.com/aui/module-watcher#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "gulp": "^3.9.1",
    "lodash.defaultsdeep": "^4.6.0"
  },
  "devDependencies": {
    "jquery": "^3.1.1",
    "mocha": "^3.1.2",
    "webpack": "^1.13.3"
  }
}
